<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />

        <title>{% block title %}Symfony{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">

        <!-- Font Awesome icons (free version)-->
        <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
        <!-- Google fonts-->
        <link href="https://fonts.googleapis.com/css?family=Varela+Round" rel="stylesheet" />
        <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet" />

        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}

        <!-- Block stylesheets -->
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            {# <link rel="preload" as="style" href="{{ preload(asset('style/global.scss'), { as: 'style' }) }}"> #}

            {# Direct Bootstrap include css #}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" 
                rel="stylesheet"
                integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
                crossorigin="anonymous">

            {% block stylesheets_add %}{% endblock %}
        {% endblock %}
        <!-- /end stylesheets -->

        <!-- Block javascripts -->
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {# <script src="{{ preload(asset('script/app.js'), { as: 'script' }) }}"></script> #}
            
            {# Direct Bootstrap include js #}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
                crossorigin="anonymous">
            </script>

            <script defer src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
            <script defer src="/scripts/data.js"></script>

            {% block javascripts_add %}{% endblock %}
        {% endblock %}
        <!-- /end javascripts -->

    </head>
    <body>

        <!-- Masterhead-->
        {% include 'menu.html.twig' %}

        <div class="h-100 m-5">&nbsp;</div>

        <div class="container">
            {% block body %}{% endblock %}
        </div>

        {% include 'footer.html.twig' %}

        {% block javascripts_end %}{% endblock %}

    </body>
</html>
