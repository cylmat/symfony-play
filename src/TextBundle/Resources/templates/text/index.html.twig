{% extends 'base.html.twig' %}

{% block title %}Text{% endblock %}

{% block body %}
    
    <section>
        <div id="text-section" class="text-center">
            <div class="px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-lg-12">
                        <h2 class="mb-4">Text substitution</h2>

                        {% include('common/_form_error.html.twig') %}

                        <div>
                            {{ form(form) }}
                        </div>

                        {% if result is not empty %}
                        <div id="result">
                            Result: {{ result }}
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
