{
    "$schema": "https://raw.githubusercontent.com/infection/infection/0.26.6/resources/schema.json",
    "source": {
        "directories": [
            "src"
        ],
        "excludes": [
            "{.*(Controller|Fixtures|Configuration|Extension|Bundle).php}"
        ]
    },
    "phpUnit": {
        "configDir": "."
    },
    "logs": {
        "text": "var/logs/infection.log"
    },
    "mutators": {
        "@default": true,
        "Concat": false,
        "ConcatOperandRemoval": false
    },
    "minMsi": 90,
    "minCoveredMsi": 100
}